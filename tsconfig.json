{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@Shared/Utility/*": ["./src/app/Shared/Utility/*"],
      "@Shared/Components/*": ["./src/app/Shared/Components/*"],
      "@Icons/*": ["./src/assets/icons/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".vscode", "docker", "nginx", "public"]
}
