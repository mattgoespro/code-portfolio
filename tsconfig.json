{
  "include": ["src"],
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@Utility/*": ["./src/app/Shared/Utility/*"],
      "@Components/*": ["./src/app/Shared/Components/*"],
      "@Icons/*": ["./src/app/Assets/SVG/Icons/*"],
      "@Hooks/*": ["./src/app/Shared/Hooks/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
