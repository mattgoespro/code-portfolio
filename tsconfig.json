{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@Utility/*": ["./src/app/Shared/Utility/*"],
      "@Components/*": ["./src/app/Shared/Components/*"],
      "@Icons/*": ["./src/assets/icons/*"],
      "@Hooks/*": ["./src/app/Shared/Hooks/*"],
      "@Images/*": [
        "./src/assets/images/about/*",
        "./src/assets/images/api/*",
        "./src/assets/images/logos/technologies/*",
        "./src/assets/images/logos/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".vscode", "docker", "nginx", "public"]
}
