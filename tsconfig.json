{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@shared": ["./src/app/shared/shared.model.ts"],
      "@shared/components/*": ["./src/app/shared/components/*"],
      "@shared/services/*": ["./src/app/shared/services/*"],
      "@shared/hooks/*": ["./src/app/shared/hooks/*"],
      "@assets/images/*": ["./src/assets/images/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".vscode"]
}
