{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@shared/components/*": ["./src/app/Shared/Components/*"],
      "@redux/store": ["./src/app/Shared/Redux/store.ts"],
      "@redux/hooks/*": ["./src/app/Shared/Redux/Hooks/*"],
      "@redux/reducers/*": ["./src/app/Shared/Redux/Reducers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".vscode"]
}
