{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@Components/*": [
        "./src/app/Shared/Components/*"
      ],
      "@Hooks/*": [
        "./src/app/Shared/Hooks/*"
      ],
      "@Icons/*": [
        "./src/app/Assets/SVG/Icons/*"
      ],
      "@Utility/*": [
        "./src/app/Shared/Utility/*"
      ]
    },
    "rootDir": "src",
    "target": "es2015"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src"
  ]
}